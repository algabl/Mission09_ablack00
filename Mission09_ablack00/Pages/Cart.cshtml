@page
@model Mission09_ablack00.Pages.Cart

@{
}
<h1>Your cart</h1>

<table class="table table-bordered table-striped table-hover">
    <thead>
    <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Cost</th>
        <th>Subtotal</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var i in Model.Basket.Items)
    {
        <tr>
            <td>@i.Book.Title</td>
            <td>@i.Quantity</td>
            <td>@i.Book.Price</td>
            <td>@(i.Quantity * i.Book.Price)</td>
            <td class="text-center">
                <form method="post" asp-page-handler="Remove">
                    <input type="hidden" name="bookId" value="@i.Book.BookId"/>
                    <input type="hidden" name="returnUrl" value="@Model.ReturnUrl"/>
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
    <tr>
        <td colspan="3">Total:</td>
        <td>@Model.Basket.CalculateTotal().ToString("c")</td>
    </tr>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>
</div>