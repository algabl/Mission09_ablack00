<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>@ViewData["Title"]</title>
    <link href = "/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
<div class="bg-dark text-white p-2">
    <nav class="navbar">
        <a class="navbar-brand text-white" asp-action="Index">
            Bookstore
        </a>
        <a class="btn btn-outline-success me-2" asp-page="/Cart">Cart</a>
    </nav>
</div>
<div class="row m-1 p-1">
    <div class="col-9">
        @RenderBody()
    </div>
</div>

<footer class="footer text-muted">
    <div class="container">
        &copy; 2023 - Bookstore
    </div>
</footer>
</body>
</html>