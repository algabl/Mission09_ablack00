@using Mission09_ablack00.Infrastructure
@model Book

<div class="card card-outline-primary m-3 p-3">
    <div class="bg-faded" m-3>
        <h4>
            @Model.Title
            <span class="badge rounded-pill bg-primary" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-3">
        by @Model.Author
        
        <table class="table table-sm">
            <tr>
                <td class="w-25">@Model.Classification</td>
                <td class="w-25">Category: @Model.Category</td>
                <td class="w-25">Published by @Model.Publisher</td>
            </tr>
            <tr>
                <td class="w-25">@Model.PageCount pages</td>
                <td class="w-25">ISBN: @Model.Isbn</td>
                <td class="w-25"></td>
            </tr>
        </table>

    </div>
    <form method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Add to Cart</button>
        </span>
    </form>
</div>


